  <script>
    function handleSubmit(event) {
      event.preventDefault();

      // Simple form validation (already required fields)
      const name = event.target.name.value.trim();
      const phone = event.target.phone.value.trim();
      const service = event.target.service.value;

      if (!name || !phone || !service) {
        alert("Please fill in all required fields.");
        return false;
      }

      // Normally here you'd send form data to your server or email service
      alert("Thanks for booking Backyard Bros! We'll get back to you soon.");

      event.target.reset();
      return false;
    }
  </script>
